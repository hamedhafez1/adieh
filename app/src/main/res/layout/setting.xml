<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgr_dlg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center"
        android:text="@string/setTextSize"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="23sp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:textDirection="rtl">

        <RadioButton
            android:id="@+id/rbRegular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:checked="true"
            android:text="@string/rTextSize"
            android:textColor="@color/colorPrimaryDark" />

        <RadioButton
            android:id="@+id/rbLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/lTextSize"
            android:textColor="@color/colorPrimaryDark" />

        <RadioButton
            android:id="@+id/rbXLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/xlTextSize"
            android:textColor="@color/colorPrimaryDark" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/chkBold"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="15dp"
        android:layoutDirection="rtl"
        android:text="@string/setBold"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtContactUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:drawableEnd="@drawable/ic_info_24dp"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:linksClickable="true"
        android:text="@string/contactUsLink"
        android:textColor="@color/colorPrimaryDark"
        android:textColorLink="@color/colorPrimaryDark"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="3dp"
        android:text="@string/version"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp" />

</LinearLayout>